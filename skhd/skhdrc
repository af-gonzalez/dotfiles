alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

shift + alt - r : yabai -m space --rotate 270
shift + alt - y : yabai -m space --mirror y-axis
shift + alt - x : yabai -m space --mirror x-axis
shift + alt - f : yabai -m window --toggle float --grid 4:4:1:1:2:2
meh - f : yabai -m window --toggle float --grid 6:10:2:0:6:6
shift + alt - s : yabai -m window --stack next

alt - left: yabai -m space --focus recent
ctrl - down: yabai -m display --focus south 
alt - right: yabai -m space --focus next
ctrl - up: yabai -m display --focus north

shift + alt - m : yabai -m window --toggle zoom-fullscreen
shift + alt - e : yabai -m space --balance

shift + alt - down : yabai -m window --swap south
shift + alt - up : yabai -m window --swap north
shift + alt - left : yabai -m window --swap west
shift + alt - right : yabai -m window --swap east

shift + alt - j : yabai -m window --warp south
shift + alt - k : yabai -m window --warp north
shift + alt - h : yabai -m window --warp west
shift + alt - l : yabai -m window --warp east

shift + alt - p : yabai -m window --space prev
shift + alt - n : yabai -m window --space next; yabai -m space --focus next
shift + alt - 1 : yabai -m window --space 1
shift + alt - 2 : yabai -m window --space 2
shift + alt - 3 : yabai -m window --space 3
shift + alt - 4 : yabai -m window --space 4
shift + alt - 5 : yabai -m window --space 5
shift + alt - 6 : yabai -m window --space 6

meh - h : yabai -m window --display west; yabai -m display --focus west
meh - k : yabai -m window --display north; yabai -m display --focus north
meh - j : yabai -m window --display south; yabai -m display --focus south
meh - l : yabai -m window --display east; yabai -m display --focus east
